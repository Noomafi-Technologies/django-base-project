# Production Environment Configuration Template
# Copy this file to .env and fill in your production values

# ===========================================
# DJANGO CORE CONFIGURATION
# ===========================================

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one at: https://djecrety.ir/
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_GENERATE_NEW_SECRET_KEY

# SECURITY WARNING: Never set DEBUG=True in production!
DEBUG=False

# Add your domain names and IP addresses
ALLOWED_HOSTS=your-domain.com,api.your-domain.com,www.your-domain.com,YOUR_VPS_IP

# Environment identifier
ENVIRONMENT=production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Main Django database connection
DB_NAME=django_base_prod
DB_USER=django_user
DB_PASSWORD=CHANGE_THIS_SECURE_DATABASE_PASSWORD
DB_HOST=db
DB_PORT=5432

# PostgreSQL container environment (must match above)
POSTGRES_DB=django_base_prod
POSTGRES_USER=django_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_DATABASE_PASSWORD

# ===========================================
# REDIS CONFIGURATION
# ===========================================

REDIS_URL=redis://redis:6379/0

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SendGrid Configuration (recommended)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=YOUR_SENDGRID_API_KEY
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Alternative: Amazon SES
# EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=YOUR_SES_ACCESS_KEY
# EMAIL_HOST_PASSWORD=YOUR_SES_SECRET_KEY

# ===========================================
# SMS CONFIGURATION (TWILIO)
# ===========================================

TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER

# ===========================================
# ERROR TRACKING (SENTRY)
# ===========================================

SENTRY_DSN=YOUR_SENTRY_DSN_URL
SENTRY_ENVIRONMENT=production

# ===========================================
# SOCIAL AUTHENTICATION
# ===========================================

# Google OAuth2
GOOGLE_OAUTH2_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_OAUTH2_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Facebook OAuth2
FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=YOUR_FACEBOOK_APP_SECRET

# ===========================================
# JWT CONFIGURATION
# ===========================================

JWT_SECRET_KEY=GENERATE_SEPARATE_JWT_SECRET_KEY
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ===========================================
# FILE STORAGE (CLOUDFLARE R2)
# ===========================================

# Set to True to use Cloudflare R2 for file storage
USE_CLOUDFLARE_R2=False

# Cloudflare R2 credentials (if using R2)
CLOUDFLARE_R2_ACCESS_KEY_ID=YOUR_R2_ACCESS_KEY_ID
CLOUDFLARE_R2_SECRET_ACCESS_KEY=YOUR_R2_SECRET_ACCESS_KEY
CLOUDFLARE_R2_BUCKET_NAME=your-r2-bucket-name
CLOUDFLARE_R2_ENDPOINT_URL=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
CLOUDFLARE_R2_CUSTOM_DOMAIN=files.your-domain.com

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================

# Domain for SSL certificate
SSL_DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Backup notification email
BACKUP_NOTIFICATION_EMAIL=admin@your-domain.com

# ===========================================
# MONITORING & LOGGING
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=WARNING

# Enable/disable various monitoring features
ENABLE_PROMETHEUS_METRICS=True
ENABLE_HEALTH_CHECKS=True

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================

# Database connection pool settings
DB_CONN_MAX_AGE=60
DB_CONN_HEALTH_CHECKS=True

# Cache timeouts (seconds)
CACHE_DEFAULT_TIMEOUT=300
CACHE_SESSION_TIMEOUT=3600
CACHE_API_TIMEOUT=3600

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Rate limiting
RATELIMIT_ENABLE=True

# CORS settings (add your frontend domains)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Session security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True

# ===========================================
# ADMIN CONFIGURATION
# ===========================================

# Admin user for initial setup
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Analytics/Tracking (optional)
GOOGLE_ANALYTICS_ID=
HOTJAR_ID=

# CDN Configuration (optional)
CDN_URL=https://cdn.your-domain.com

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable features
ENABLE_USER_REGISTRATION=True
ENABLE_SOCIAL_AUTH=True
ENABLE_API_DOCUMENTATION=True
ENABLE_ADMIN_INTERFACE=True

# ===========================================
# DEVELOPMENT OVERRIDES (leave as False for production)
# ===========================================

# Development settings (NEVER set to True in production)
ENABLE_DEBUG_TOOLBAR=False
ENABLE_DJANGO_EXTENSIONS=False
ENABLE_BROWSABLE_API=False

# ===========================================
# DEPLOYMENT METADATA
# ===========================================

# Deployment information
DEPLOY_DATE=
DEPLOY_VERSION=
DEPLOY_COMMIT=